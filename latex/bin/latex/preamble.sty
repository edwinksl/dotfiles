% Fix spaces around \left and \right
% See https://tex.stackexchange.com/a/2610/5106
\let\originalleft\left
\let\originalright\right
\renewcommand{\left}{\mathopen{}\mathclose\bgroup\originalleft}
\renewcommand{\right}{\aftergroup\egroup\originalright}

% Math
\newcommand{\dd}{\mathrm{d}}
\newcommand{\ud}{\,\mathrm{d}}
\DeclareMathOperator{\erf}{erf}
\DeclareMathOperator{\erfc}{erfc}

% Subscripts
\newcommand{\textn}[1]{\textnormal{#1}}  % See https://tex.stackexchange.com/a/98407/5106
\newcommand{\limn}{\textn{lim}}
\newcommand{\maxn}{\textn{max}}
\newcommand{\minn}{\textn{min}}

